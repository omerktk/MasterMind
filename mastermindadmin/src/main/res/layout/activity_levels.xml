<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".LevelsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signin"
        android:text="Manage Words"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_margin="50dp"
        android:gravity="center"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/wordlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signin"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/design_default_color_secondary"
        android:text="words list" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addeasyword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wordlist"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/design_default_color_secondary"
        android:text="add easy word" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addhardword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addeasyword"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/design_default_color_secondary"
        android:text="add medium/Hard word" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/dword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addhardword"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/design_default_color_secondary"
        android:text="Delete Words" />




    <TextView

        android:id="@+id/forgotpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textSize="21sp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/design_default_color_secondary"
        android:text="MasterMind.org"
        android:gravity="center"
        />




</RelativeLayout>